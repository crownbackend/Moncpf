    <section id="titlebar">
        <!-- Container -->
        <div class="container">

            <div class="eight columns">
                <h1 class="text-center">MON ESPACE</h1>
            </div>

        </div>
        <!-- Container / End -->
    </section>

    <!-- Content -->
    <div id="content">
        <div class="container">

            <div class="row">
                <!--  etape une -->
                <div class="span12">
                    <h4></h4>

                    <!-- Typography Row -->
                    <div class="row t-row">
                        <!-- Line -->
                        <div class="span12"><hr></div>
                        <div class="span9">

                                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                    <h2>Mon profile</h2>
                                    <p>Veuillez consulter la page suivante pour voir votre profile:</p>

                                    <a href="{{ path('fos_user_profile_show') }}">
