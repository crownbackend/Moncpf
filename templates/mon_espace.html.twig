                                        <!-- Title -->
                                        <h3><i class="icon-signin hidden-tablet"></i> JE M'INSCRIT</h3>
                                    </div>
                                </a>
                                    <div class="row space10"></div>

                                    <div class="row space50"></div>

                            <h2>CONNEXION</h2>
                            <p>Veuillez consulter la page suivante pour vous connecter :</p>
                            <a class="btn btn-blue" href="{{ path('fos_user_security_login') }}">


                                <h3><i class="icon-signin hidden-tablet"></i>{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</h3>

                            </a>


                                {% endif %}

                        </div>
                        <div class="space30 visible-phone"></div>
                        <!-- Line -->
                        <div class="span12"><hr></div>
                    </div>
                    <!-- Typography Row End -->
                    <div class="row space10"></div>

                    <div class="row space50"></div>
                </div>


            </div>
        </div>
    </div>
